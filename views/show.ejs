    background-repeat: no-repeat;
    background-size: cover;
    height: 90vh;
    width: 100%;
}
.footer_centre{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 70px;
  color: white;
}
.grand_box{
    display: grid;
    grid-template-columns: repeat(auto-fill,minmax(500px,auto));
    grid-auto-rows: minmax(500px,auto);
    gap: 20px;
    margin-left: 15%;
    margin-right: 15%;
}
.grand_col p{
    padding: 5px;
}

    </style>
